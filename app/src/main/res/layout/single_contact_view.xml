<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_5dp"
    android:background="#dddddd">


        <ImageView
            android:id="@+id/ivContactImage"
            android:layout_width="@dimen/space_50dp"
            android:layout_height="@dimen/space_50dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_5dp"
            android:layout_marginStart="@dimen/space_10dp"
            android:src="@drawable/user_profile_round"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/ivContactImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_light"
                android:text="Name"/>

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10dp"
                android:layout_marginStart="@dimen/space_10dp"
                android:textSize="14sp"
                android:layout_below="@+id/tvContactName"
                android:textColor="@android:color/primary_text_light"
                android:text="Phone"/>
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10dp"
                android:layout_marginStart="@dimen/space_10dp"
                android:layout_below="@+id/tvPhoneNumber"
                android:textSize="14sp"
                android:singleLine="false"
                android:paddingBottom="@dimen/space_20dp"
                android:maxLines="2"
                android:textColor="@android:color/primary_text_light"
                android:text="Email"/>


        </RelativeLayout>


</RelativeLayout>